<?xml version="1.0" encoding="utf-8"?>
<com.midas.websocketclient.widget.ZRSwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:layout_width="match_parent"
                                                android:layout_height="65dp">

    <!-- 内容 -->
    <RelativeLayout
        android:id="@+id/mContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.midas.websocketclient.widget.ZRCircleImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/avatar"
            android:text="Hello"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="13dp"
            android:text="11:23"
            android:textColor="#888888"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/time"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/unread_count_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/message"
            android:layout_toLeftOf="@id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/avatar"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="7dp"
            android:text="我是一个好人"
            android:textColor="#888888"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mBehindLayout"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#ff0000"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</com.midas.websocketclient.widget.ZRSwipeLayout>
