<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center">

  <LinearLayout
    android:id="@+id/ll_main_tab_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/iv_main_tab"
      style="@style/main_tab_iv"/>

    <TextView
      android:id="@+id/tv_main_tab"
      style="@style/main_tab_tv"/>
  </LinearLayout>

  <TextView
    android:id="@+id/tv_main_wake_num"
    android:layout_width="wrap_content"
    android:layout_height="14dp"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="4dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_alignLeft="@id/ll_main_tab_container"
    android:background="@drawable/main_tab_invite_red_point"
    android:gravity="center"
    android:text=""
    android:textColor="@color/white"
    android:textSize="10sp"/>
</RelativeLayout>